{
  "name": "apparaatti",
  "version": "0.0.1",
  "description": "Platform for recmmending the correct courses based on user feedback",
  "type": "module",
  "scripts": {
    "start": "docker compose up",
    "prod": "NODE_ENV=production node --no-warnings src/server/index.ts",
    "dev": "NODE_ENV=development concurrently \"nodemon --exec node --no-warnings --experimental-strip-types src/server/index.ts\" \"vite\"",
    "tsc": "tsc",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write '*.{ts,json,css,md}'",
    "build": "vite build",
    "prepare": "husky install"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/react": "^19.1.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "husky": "^9.1.7",
    "nodemon": "^3.1.9",
    "vite": "^6.2.4"
  },
  "nodemonConfig": {
    "ignore": [
      "e2e"
    ],
    "watch": [
      "src"
    ],
    "ext": "*.js,*.ts,*.json"
  },
  "dependencies": {
    "express": "^5.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
